load("@rules_go//go:def.bzl", "go_library")
load("@rules_go//proto:def.bzl", "go_proto_library")
load("@rules_proto//proto:defs.bzl", "proto_library")
load("//rules:copy_proto_output.bzl", "copy_proto_output")

proto_library(
    name = "analysis_proto",
    srcs = ["analysis_v2.proto"],
    visibility = ["//visibility:public"],
    deps = ["//third_party/protobuf/bazel/build:blaze_query_proto"],
)

go_proto_library(
    name = "analysis_go_proto",
    importpath = "github.com/bazel-contrib/target-determinator/third_party/protobuf/bazel/analysis",
    proto = ":analysis_proto",
    visibility = ["//visibility:public"],
    deps = ["//third_party/protobuf/bazel/build"],
)

go_library(
    name = "analysis",
    embed = [":analysis_go_proto"],
    importpath = "github.com/bazel-contrib/target-determinator/third_party/protobuf/bazel/analysis",
    visibility = ["//visibility:public"],
)

copy_proto_output(
    name = "copy_analysis",
    proto_library = ":analysis_go_proto",
)
